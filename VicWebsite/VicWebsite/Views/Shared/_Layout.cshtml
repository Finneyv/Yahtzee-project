<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Vic Finney</title>
    @Styles.Render("~/Content/main.css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>
    @model VicWebsite.Models.ContactModel 
    <!-- Page Wrapper -->
    <div id="page-wrapper">

        <!-- Header -->
        <header id="header" class="alt">
            <h1>@Html.ActionLink("Vic Finney", "Index", "Home")</h1>
            <nav>
                <a href="#menu">Menu</a>
            </nav>
        </header>

        <!-- Menu -->
        <nav id="menu">
            <div class="inner">
                <h2>Menu</h2>
                <ul class="links">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="#About"><a href="#About">About</a></li>
                    @*<li class="#Skills"><a href="#Skills">My Skills</a></li>*@
                    <li><a href="~/Content/VicFinneyResume.pdf">My Resume</a></li>
                    <li><a href="~/Content/VicFinney'sPortfolio.pdf">My Portfolio</a></li>
                    <li>@Html.ActionLink("Yahtzee", "Game", "Yahtzee")</li>
                    <li class="#footer"><a href="#footer">Contact</a></li>
                </ul>
                <a href="#" class="close">Close</a>
            </div>
        </nav>
        @RenderBody()
        <!-- Footer -->
        <section id="footer">
            <div class="inner">
                <h2 class="major">Contact Me</h2>
                <p>
                    Feel free to send me a message using any of the links below. <br />
                    Any messages sent via the textbox below will be sent to my email address at <a href="mailto:finneyv09@gmail.com?subject=From_My_Website">finneyv09@gmail.com</a>.<br/> I check my email at least once daily so you should expect a reply within at least 24 hours.
                </p>
                @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="field">
                        @Html.LabelFor(model => model.Name)
                        @Html.EditorFor(model => model.Name)
                    </div>
                    <div class="field">
                        @Html.LabelFor(model => model.Email)
                        @Html.EditorFor(model => model.Email)
                    </div>
                    <div class="field">
                        @Html.LabelFor(model => model.Message)
                        @Html.TextAreaFor(model => model.Message)
                    </div>
                    @*<div>
                        @Html.CheckBoxFor(model => model.WantCC)
                    </div>*@
                    <ul class="actions">
                        <li><input type="submit" value="Send Message" /></li>
                    </ul>
                }
                <ul class="contact">
                    <li class="fa-home">
                        Victor Finney<br />
                        4421 Clovelly Court<br />
                        Indianapolis, IN 46254
                    </li>
                    <li class="fa-phone">(513) 502-1788</li>
                    <li class="fa-envelope"><a href="mailto:finneyv09@gmail.com?subject=From_My_Website">finneyv09@gmail.com</a></li>
                    <li class="icon fa-github"><a href="https://www.github.com/Finneyv">github.com/Finneyv</a></li>
                    <li class="icon fa-linkedin"><a href="https://www.linkedin.com/in/victor-finney-8b4a3634">linkedin.com/in/victor-finney-8b4a3634</a></li>
                    @*<li class="fa-instagram"><a href="#">instagram.com/untitled-tld</a></li>*@
                </ul>
                <ul class="copyright">
                    <li>&copy; @DateTime.Now.Year - Vic Finney</li>
                    <li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
                </ul>
            </div>
        </section>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/skel")
    @RenderSection("scripts", required: false)
</body>
</html>
